-- Função genérica para resgatar códigos
local function RedeemCode(code)
    -- Substitua pelo evento real do jogo
    -- Exemplo:
    -- game:GetService("ReplicatedStorage").RedeemCodeEvent:FireServer(code)
    print("Resgatando código:", code)
end

-- Botão Resgatar Todos os Códigos
createButton("Resgatar Todos os Códigos", function()
    for _, code in ipairs(Codes) do
        RedeemCode(code)
        wait(0.2)
    end
    print("Todos os códigos foram resgatados!")
end, 3)

-- Botão Speed
createButton("Speed", function()
    print("Speed ativado! Coloque seu script aqui.")
end, 4)

-- Botão Fly
createButton("Fly", function()
    print("Fly ativado! Coloque seu script aqui.")
end, 5)
